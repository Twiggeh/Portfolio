{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Launch Chrome",
			"sourceMaps": true,
			"outFiles": ["./client/public/js/*.js", "!**/node_modules/**"],
			"request": "launch",
			"type": "pwa-chrome",
			"url": "http://localhost:5000",
			"webRoot": "${workspaceFolder}/client",
			"postDebugTask": "Linux kill webpack"
		},
		{
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen",
			"name": "server",
			"program": "${workspaceFolder}/server/app.js",
			"cwd": "${workspaceFolder}/server",
			"request": "launch",
			"restart": true,
			"runtimeExecutable": "nodemon",
			"skipFiles": ["<node_internals>/**"],
			"type": "pwa-node"
		},
		{
			"name": "Attach",
			"port": 9229,
			"request": "attach",
			"skipFiles": ["<node_internals>/**"],
			"type": "pwa-node"
		},
		{
			"name": "Development Backend",
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen",
			"cwd": "${workspaceFolder}/server",
			"request": "launch",
			"restart": true,
			"runtimeExecutable": "yarn",
			"skipFiles": ["<node_internals>/**"],
			"type": "pwa-node",
			"runtimeArgs": ["debug"]
		},
		{
			"type": "pwa-chrome",
			"request": "attach",
			"name": "Attach to Chrome",
			"port": 9999,
			"webRoot": "${workspaceFolder}/client",
			"sourceMaps": true,
			"skipFiles": ["cypress_runner.js"]
		},
		{
			"command": "tsc --noEmit -w",
			"cwd": "${workspaceFolder}/client",
			"name": "TSC Watcher Client",
			"request": "launch",
			"type": "node-terminal",
			"internalConsoleOptions": "neverOpen"
		},
		{
			"command": "yarn debug",
			"cwd": "${workspaceFolder}/server",
			"name": "TSC Compiler Server",
			"request": "launch",
			"type": "node-terminal"
		}
	],
	"compounds": [
		{
			"name": "start debug session",
			"configurations": [
				"Launch Chrome",
				"Development Backend",
				"TSC Watcher Client",
				"TSC Compiler Server"
			],
			"preLaunchTask": "start Webpack",
			"stopAll": true
		}
	]
}
